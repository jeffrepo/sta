<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="sta_view_order_form" model="ir.ui.view">
            <field name="name">sta.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="price_unit" position="after">
                    <field name="dias"/>
                    <field name="noches"/>
                </field>
            </field>
        </record>

        <record id="sale_order_form_quote_sta" model="ir.ui.view">
            <field name="name">sale.order.form.payment.sta</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_management.sale_order_form_quote"/>
            <field name="arch" type="xml">
                <field name="quantity" position="before">
                    <field name="costo"/>
                </field>

            </field>
        </record>

</odoo>
